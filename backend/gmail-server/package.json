{
  "name": "@neurix/gmail-server",
  "version": "0.1.0",
  "description": "Google Gmail MCP Server - Access and manage Gmail through MCP",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "neurix-gmail-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs');const p=require('path');const d='dist/http/public';fs.mkdirSync(d,{recursive:true});fs.copyFileSync('src/http/public/test.html',p.join(d,'test.html'));\"",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "node dist/http/index.js",
    "oauth-setup": "node dist/oauth-setup.js",
    "clean": "node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true});\"",
    "test": "echo \"Tests coming soon\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@neurix/mcp-sdk": "workspace:*",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "googleapis": "^128.0.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "open": "^10.1.0",
    "opossum": "^9.0.0",
    "prom-client": "^15.1.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^20.10.5",
    "@types/opossum": "^8.1.9",
    "typescript": "^5.3.3"
  }
}
